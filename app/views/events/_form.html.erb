<%= form_with(model: event, local: true) do |form| %>
  <div>
    <%= form.text_field :title, id: :event_title, placeholder: Event.human_attribute_name(:title), required: true, aria: { label: Event.human_attribute_name(:title) } %>
    <% if event.errors.full_messages_for(:title).any? %>
      <p>
        <% event.errors.full_messages_for(:title).each do |message| %>
          <%= message %>
        <% end %>
      </p>
    <% end %>
  </div>

  <div>
    <%= form.text_area :body, id: :event_body, placeholder: Event.human_attribute_name(:body), required: true, aria: { label: Event.human_attribute_name(:body) }%>
    <% if event.errors.full_messages_for(:body).any? %>
      <p>
        <% event.errors.full_messages_for(:body).each do |message| %>
          <%= message %>
        <% end %>
      </p>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
